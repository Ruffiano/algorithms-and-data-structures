{
    "compilerOptions": {
      "downlevelIteration": true,
      "outDir": "./lib",
      "module": "ES2020",
      "moduleResolution": "node",
      "sourceMap": true,
      "lib": ["ES2020", "ES2019", "ES2020.Promise", "ES2020.String", "ES2020.BigInt", "DOM", "DOM.Iterable", "ESNext"],
      "target": "ES2019",
      "allowJs": true,
      "strict": true,
      "declaration": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": false,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "importHelpers": true,
      "skipLibCheck": true,
      "declarationDir": "./lib/types"
    },
    "include": [
      "src"
    ],
    "exclude": [
      "examples",
      "scripts/**/*",
      "node_modules",
    ]
  }